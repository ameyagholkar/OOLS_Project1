<div class='mainTableHolder' style="padding-left: 20px">
<h1><%= @title %></h1>
<%= form_for(:session , :url => sessions_path) do |f|%>
<div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>
    </div>